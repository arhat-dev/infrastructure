{
  "extends": [
    "config:base",
    "github>arhat-dev/renovate-presets:kubernetes-cluster"
  ],
  "reviewers": [],
  "schedule": [
    "every weekend"
  ],
  "semanticCommitType": "deps",
  "semanticCommitScope": "charts",
  "semanticCommits": "enabled",
  "timezone": "Asia/Hong_Kong",
  "unicodeEmoji": true,
  "prBodyDefinitions": {
    "Package": "`{{{lookupName}}}`"
  },
  "prBodyColumns": [
    "Package",
    "Update",
    "Type",
    "New value",
    "Package file",
    "References"
  ],
  "prCreation": "status-success",
  "prFooter": "This PR has been generated by renovateBot",
  "draftPR": true,
  "branchPrefix": "deps/",
  "additionalBranchPrefix": "",
  "commitBody": "Generated by renovateBot",
  "commitBodyTable": true,
  "dependencyDashboard": true,
  "dependencyDashboardApproval": true,
  "dependencyDashboardAutoclose": false,
  "dependencyDashboardTitle": "Available chart upgrades",
  "dependencyDashboardHeader": "This issue tracks chart version upgrades",
  "enabledManagers": ["dockerfile", "npm"],
  "excludeCommitPaths": ["clusters/**", ".helm-stack.yaml"],
  "ignoreDeprecated": true,
  "ignoreNpmrcFile": true,
  "includeForks": false,
  "labels": ["dependencies"]
}
